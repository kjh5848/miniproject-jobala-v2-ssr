{{> layout/header}}

<div class="my-5 d-flex justify-content-center">
    <!-- 요청을 하면 localhost:8080/login POST로 요청됨
    username=사용자입력값&password=사용자값 -->
    <div class="card row col-sm-3 col-10">
        <div class="card-header"><b>로그인을 해주세요</b></div>
        <div class="card-body">
            <form action="/login" method="post" enctype="application/x-www-form-urlencoded" class="was-validated">
                <div class="mb-3 mt-3">
                    <label for="username" class="form-label">아이디</label>
                    <input value="com1" type="text" class="form-control" id="username" placeholder="Enter username"
                           name="username"
                           required>
                    <div class="valid-feedback">확인</div>
                    <div class="invalid-feedback">아이디를 적어주세요.</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">비밀번호</label>
                    <input value="1234" type="password" class="form-control" id="password" placeholder="Enter password"
                           name="password"
                           required>
                    <div class="valid-feedback">확인</div>
                    <div class="invalid-feedback">비밀번호를 적어주세요.</div>
                </div>
                <div class="row">
                    <div class="col-12 text-center">
                        <button id="btnLogin" type="submit" class="btn btn-primary btn-lg">로그인</button>
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-12 text-center mt-3">
                    <a href="/joinForm" id="btnJoin" type="submit" class="btn-primary btn-lg">개인/기업 회원가입</a>
                </div>
            </div>
        </div>
    </div>
</div>

{{> layout/footer}}