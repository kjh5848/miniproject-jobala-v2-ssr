{{> layout/header}}

<!--개인 지원현황 페이지-->
<div class="container">
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="upMenu text-center mb-4">
                    <h1>마이페이지</h1>
                    <div class="btn-group btn-group-lg">
                        <a href="/guest/profileForm">
                            <button type="button" class="btn btn-outline-dark m-1" id="profileBtn">프로필 관리</button>
                        </a>
                        <a href="/guest/mngForm">
                            <button type="button" class="btn btn-outline-dark m-1">이력서 관리</button>
                        </a>
                        <a href="/applyStatusForm">
                            <button type="button" class="btn btn-outline-dark m-1">지원 관리</button>
                        </a>
                        <a href="/guest/scrapForm">
                            <button type="button" class="btn btn-outline-dark m-1">스크랩한 기업</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col">
                <div class="applyBox">
                    <h2 class="text-left">지원 현황</h2>
                    <div class="card shadow row">
                        <table class="table p-3" style="margin-bottom: 0px;">
                            <thead class="table-primary">
                            <tr>
                                <th>공고 제목</th>
                                <th>이력서 제목</th>
                                <th>상태</th>
                            </tr>
                            </thead>
                            {{#Apply}}
                                <tbody>
                                <tr>
                                    <td>{{jobopenTitle}}</td>
                                    <td>{{resumeTitle}}</td>
                                    <td>{{state}}</td>
                                </tr>
                                </tbody>
                            {{/Apply}}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
    <br>
    <div class="card border-0">
        <div id="applicantsList">

            <h2 class="profileBox text-left mb-4 mt-4" style="margin-top: -50px;">받은 포지션 제안 목록<span
                    class="badge bg-info"
                    id="applyCount"></span></h2>
            {{#ApplyGuest}}
                <div class="card border border-light shadow p-3 mb-3 bg-body rounded" style="position: relative;">
                    <a onClick="location.href='/comp/jobopen/{{jobopenId}}'" style="cursor:pointer">
                        <p>{{resumeTitle}}</p>
                        <h3>{{jobopenTitle}}</h3>
                        <p>{{state}}</p>
                        <p><small>{{endTime}}</small></p>
                    </a>


                    <div class="button-container d-flex flex-column justify-content-center align-items-end position-absolute top-50 end-0 translate-middle-y mt-3">

                        <!--             합격                    -->
                        <form action="/guest/applyStatus/update" method="post"
                              enctype="application/x-www-form-urlencoded">
                            <input type="hidden" name="status" value="수락">
                            <input type="hidden" name="applyId" value="{{id}}">
                            <button type="submit" class="btn btn-info m-2 mb-0" style="width: 70px; height: 40px;">수락
                            </button>
                        </form>

                        <!--             불합격                    -->
                        <form action="/guest/applyStatus/update" method="post"
                              enctype="application/x-www-form-urlencoded">
                            <input type="hidden" name="status" value="거절">
                            <input type="hidden" name="applyId" value="{{id}}">
                            <button type="submit" class="btn btn-secondary m-2" style="width: 70px; height: 40px;">거절
                            </button>
                        </form>

                    </div>

                </div>
            {{/ApplyGuest}}

            {{#ApplyGuest2}}
                <div class="card border border-light shadow p-3 mb-3 bg-body rounded" style="position: relative;">
                    <a onClick="location.href='/comp/jobopen/{{jobopenId}}'" style="cursor:pointer">
                        <p>{{resumeTitle}}</p>
                        <h3>{{jobopenTitle}}</h3>
                        <p class="text-info">{{state}}</p>
                        <p><small>{{endTime}}</small></p>
                    </a>

                </div>
            {{/ApplyGuest2}}

            {{#ApplyGuest3}}
                <div class="card border border-light shadow p-3 mb-3 bg-body rounded" style="position: relative;">
                    <a onClick="location.href='/comp/jobopen/{{jobopenId}}'" style="cursor:pointer">
                        <p>{{resumeTitle}}</p>
                        <h3>{{jobopenTitle}}</h3>
                        <p class="text-danger">{{state}}</p>
                        <p><small>{{endTime}}</small></p>
                    </a>

                </div>
            {{/ApplyGuest3}}



            <div class="container mt-3">
                <ul
                        class="pagination justify-content-center"
                        style="margin-bottom: 50px; "
                >
                    <li class="page-item disabled text-info bg-light border-dark">
                        <a class="page-link text-info bg-light" href="#">Previous</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link text-info bg-light" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link text-info bg-light" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link text-info bg-light" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link text-info bg-light" href="#">Next</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
{{> layout/footer}}