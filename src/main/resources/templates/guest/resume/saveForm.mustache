{{> layout/header}}


<!--이력서 수정페이지-->
<div class="container">
    <form action="/guest/resume/write" method="post" enctype="application/x-www-form-urlencoded">
        <div>
            <input class="mb-3" type="text" name="resumeTitle" id="" placeholder="이력서 제목"
                   style="font-size: 30px; border-radius: 5px; width: 100%;">
        </div>
        <div class="card mb-2">
            <div>
                <h5 class="card-header">인적사항</h5>
            </div>
            <div class="card-body row">
                <form action="/upload" method="post" enctype="multipart/form-data" id="uploadForm">
                    <div>
                        <input class="mb-3" type="text" name="resumeTitle" id="" placeholder="이력서 제목"
                               style="font-size: 30px; border-radius: 5px; width: 100%;">
                    </div>
                    <div class="card mb-2">
                        <div>
                            <h5 class="card-header">인적사항</h5>
                        </div>
                        <div class="card-body row">
                            <img id="imgPreview" src="{{#pic}}/image/{{pic.imgFilename}}{{/pic}}" alt="미리보기 이미지"
                                 style="width: 120px; height: 175px; border: 1px solid #ccc; margin-left: 200px;">
                            <p style="margin-left: 190px;">제목 : {{#pic}}이력서 사진{{/pic}}</p>
                            <input type="file" name="imgFile" id="imgFile"
                                   style="margin-left: 188px; margin-top: 5px;">
                        </div>
                        <div class="col-md-6">
                            <table class="table table-bordered" style="margin-top: -180px; margin-left: 450px;">
                                <tbody style="font-size: 15px;">
                                <tr>
                                    <th>이름</th>
                                    <td>{{user.name}}</td>
                                    <th>나이</th>
                                    <td>{{user.age}}</td>
                                </tr>
                                <tr>
                                    <th>이메일</th>
                                    <td>{{user.email}}</td>
                                    <th>핸드폰</th>
                                    <td>{{user.phone}}</td>
                                </tr>
                                <tr>
                                    <th>주소</th>
                                    <td colspan="3">{{user.address}}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card mb-2">
                        <div>
                            <h5 class="card-header">희망직무</h5>
                            <div class="container m-2">
                                <select class="form-select" name="hopeJob">
                                    <option value="">선택</option>
                                    <option value="프론트엔드">프론트엔드</option>
                                    <option value="백엔드">백엔드</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-2">
                        <div>
                            <h5 class="card-header">스킬</h5>
                        </div>
                        <div class="row m-2">
                            <div class="col-sm-2">
                                <div class="form-check">
                                    <input type="checkbox" name="skills" class="form-check-input" value="Java">
                                    <div>Java</div>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-check">
                                    <input type="checkbox" name="skills" class="form-check-input"
                                           value="JavaScript">
                                    <div>JavaScript</div>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-check">
                                    <input type="checkbox" name="skills" class="form-check-input"
                                           value="Spring">
                                    <div>Spring</div>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-check">
                                    <input type="checkbox" name="skills" class="form-check-input" value="HTML">
                                    <div>HTML</div>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-check">
                                    <input type="checkbox" name="skills" class="form-check-input"
                                           value="jQuery">
                                    <div>jQuery</div>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-check">
                                    <input type="checkbox" name="skills" class="form-check-input" value="MySQL">
                                    <div>MySQL</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-2">
                        <div>
                            <h5 class="card-header">학력</h5>
                            <div class="d-flex m-2">
                                <div class="col-sm-4">
                                    <select class="form-select" name="edu">
                                        <option>고등학교 졸업</option>
                                        <option>대학교 졸업</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-2">
                        <div>
                            <h5 class="card-header">경력</h5>
                            <div class="col-sm-4 m-2">
                                <select class="form-select" name="career">
                                    <option value="">선택</option>
                                    <option value="신입">신입</option>
                                    <option value="경력">경력</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-2">
                        <div class="d-flex justify-content-between card-header">
                            <h5>자격증</h5>
                        </div>
                        <div class="col-sm-4 m-2">
                            <select class="form-select" name="license">
                                <option value="">선택</option>
                                <option value="정보처리기사">정보처리기사</option>
                                <option value="sqld">SQLD</option>
                            </select>
                        </div>
                    </div>
                    <div class="card mb-2">
                        <div>
                            <h5 class="card-header">자기소개서</h5>
                            <textarea class="form-control" rows="5" id="comment" name="content"></textarea>
                        </div>
                    </div>
                    <br>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class=" btn btn-primary btn-lg">작성완료</button>
                    </div>
                </form>
            </div>
        </div>
    </form>
    <br>
    <br><br>
</div>

<script>
    const imgFileInput = document.getElementById('imgFile');
    const imgPreview = document.getElementById('imgPreview');
    const uploadBtn = document.getElementById('uploadBtn');
    imgFileInput.addEventListener('change', function(event) {
        const file = event.target.files[0];
        const reader = new FileReader();
        reader.onload = function(e) {
            imgPreview.src = e.target.result;
        }
        reader.readAsDataURL(file);
    });
    uploadBtn.addEventListener('click', function() {
        const formData = new FormData();
        const file = imgFileInput.files[0];
        formData.append('imgFile', file);
        fetch('/upload', {
            method: 'POST',
            body: formData
        })
                .then(response => response.json())
                .then(data => {
                    // 업로드가 성공하면 미리보기 이미지를 업데이트하거나 다른 작업을 수행합니다.
                    console.log('업로드가 완료되었습니다.');
                })
                .catch(error => {
                    console.error('업로드 중 오류가 발생했습니다:', error);
                });
    });
</script>

