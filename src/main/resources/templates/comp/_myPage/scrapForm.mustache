{{> layout/header}}

<!--기업 스크랩 페이지-->
<div class="container">


    <div class="card-body">
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="upMenu text-center mb-4">
                        <h1>마이페이지</h1>
                        <div class="btn-group btn-group-lg">
                            <a href="/comp/profileForm">
                                <button type="button" class="btn btn-outline-dark m-1">프로필 관리</button>
                            </a>
                            <a href="/comp/mngForm">
                                <button type="button" class="btn btn-outline-dark m-1">채용공고 관리</button>
                            </a>
                            <a href="/applys">
                                <button type="button" class="btn btn-outline-dark m-1">지원자 관리</button>
                            </a>
                            <a href="/comp/scrapForm">
                                <button type="button" class="btn btn-outline-dark m-1">스크랩</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="applyBox">
                    <h2 class="text-left">스크랩한 인재</h2>
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">이름</th>
                            <th scope="col">이력서 제목</th>
                            <th scope="col">학력</th>
                            <th scope="col">경력</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#resumeList}}
                            <tr onClick="location.href='/guest/resume/{{id}}'">
                                    <td>{{name}}</td>
                                    <td>{{resumeTitle}}</td>
                                    <td>{{edu}}</td>
                                    <td>{{career}}</td>
                            </tr>
                        {{/resumeList}}
                        <!-- Add more rows as needed -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
    <br>
</div>
<!-- Footer content goes here -->


{{> layout/footer}}